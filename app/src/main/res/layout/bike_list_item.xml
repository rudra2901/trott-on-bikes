<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bikeListImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@mipmap/bikeimage"
        android:layout_weight="0.4"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/ownernameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Owner's Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/ownerAddTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Owner's address"
            android:textSize="15sp"
            android:padding="5dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.3"
            android:stepSize="0.1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:theme="@style/RatingBar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/viewBikeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_signup"
                android:layout_weight="0.2"
                android:layout_marginEnd="5dp"
                android:text="View"
                android:background="@drawable/round_button"/>

            <Button
                android:id="@+id/rideBikeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_signup"
                android:layout_weight="0.2"
                android:layout_marginEnd="5dp"
                android:text="Ride"
                android:background="@drawable/round_button"/>

            <Button
                android:id="@+id/bookBikeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_signup"
                android:layout_weight="0.2"
                android:text="Book"
                android:background="@drawable/round_button"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>